<h2 class="page-header">New Author</h2>
<!--form for adding new author with post method-->
<form action="/authors" method="POST">
    <!--using form fields file instead of input tags directly-->
    <%- include('_form_fields') %>
    <!--cancel button-->
    <div class="form-row form-row-end btn-row">
        <a class="btn btn-danger" href="/authors">Cancel</a>
        <button class="btn btn-primary" type="submit">Create</button>
    </div>
</form>